@model IEnumerable<RoomBookerAPI.Models.Sala>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NSala)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LotacaoMax)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TempoMinLimp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdCentroNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NSala)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LotacaoMax)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TempoMinLimp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ativo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdCentroNavigation.IdCentro)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdSala">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdSala">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdSala">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
